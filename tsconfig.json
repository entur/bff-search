{
    "compileOnSave": true,
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "esModuleInterop": true,
        "lib": ["es2020"],
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "dist",
        "strict": true,
        "paths": {
            "*": ["node_modules/*"]
        },
        "sourceMap": true,
        "target": "es2020",
        "noUncheckedIndexedAccess": true,
        "useUnknownInCatchVariables": false
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules/*"]
}
