{
    "compilerOptions": {
        "lib": ["es2021"],
        "target": "es2021",
        "module": "commonjs",
        "moduleResolution": "node",
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "noEmit": true,
        "strict": true,
        "declaration": true,
        "declarationDir": "typeDeclarations",
        "noUncheckedIndexedAccess": true,
        "useUnknownInCatchVariables": false,
        "skipLibCheck": true
    },
    "include": ["src/**/*", "types"],
}
